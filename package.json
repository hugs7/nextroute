{
  "name": "next-typed-paths",
  "version": "0.2.1",
  "description": "A realtime typesafe Next.Js route generation tool",
  "keywords": [
    "nextjs",
    "routes",
    "typescript",
    "type-safe",
    "app-router"
  ],
  "homepage": "https://github.com/hugs7/next-typed-paths#readme",
  "bugs": {
    "url": "https://github.com/hugs7/next-typed-paths/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hugs7/next-typed-paths.git"
  },
  "license": "MIT",
  "author": "Hugo Burton",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "next-typed-paths": "./dist/cli.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "default": "./dist/index.js"
    },
    "./runtime": {
      "types": "./dist/runtime/index.d.ts",
      "import": "./dist/runtime/index.js",
      "require": "./dist/runtime/index.cjs",
      "default": "./dist/runtime/index.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "tsc": "tsc -p tsconfig.lib.json",
    "build": "npm run tsc && vite build",
    "prepublishOnly": "npm run build",
    "test": "vitest",
    "test:e2e": "npx tsx src/cli.ts generate --config ./test/routes.config.ts",
    "test:e2e:watch": "npm run test:e2e -- --watch"
  },
  "dependencies": {
    "chokidar": "^5.0.0",
    "commander": "^14.0.3",
    "cosmiconfig": "^9.0.0",
    "lodash-es": "^4.17.23",
    "prettier": "^3.8.1",
    "ts-morph": "^27.0.2",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^25.2.3",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vite-plugin-dts": "^4.5.4",
    "vite-tsconfig-paths": "^6.1.1",
    "vitest": "^4.0.18"
  },
  "peerDependencies": {
    "typescript": ">=5.0.0"
  }
}
