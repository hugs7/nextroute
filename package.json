{
  "name": "next-typed-paths",
  "version": "0.1.0",
  "description": "A realtime typesafe Next.Js route generation tool",
  "keywords": [
    "nextjs",
    "routes",
    "typescript",
    "type-safe",
    "app-router"
  ],
  "homepage": "https://github.com/hugs7/next-typed-paths#readme",
  "bugs": {
    "url": "https://github.com/hugs7/next-typed-paths/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hugs7/next-typed-paths.git"
  },
  "license": "MIT",
  "author": "Hugo Burton",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "next-typed-paths": "./dist/cli.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "vite build",
    "prepublishOnly": "npm run build",
    "test": "vitest"
  },
  "dependencies": {
    "chokidar": "^5.0.0",
    "commander": "^14.0.3",
    "cosmiconfig": "^9.0.0",
    "ts-morph": "^27.0.2",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/node": "^25.2.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vite-plugin-dts": "^4.5.4",
    "vite-tsconfig-paths": "^6.1.0",
    "vitest": "^4.0.18"
  },
  "peerDependencies": {
    "typescript": ">=5.0.0"
  }
}
